!!! 5
%html
  %head

    %title {Title}{block:PostSummary} — {PostSummary}{/block:PostSummary}
    %link{ :rel => "shortcut icon", :href => "{Favicon}" }
    %link{ :rel => "alternate", :type => "application/rss+xml", :href => "{RSS}" }

    \{block:Description}
    <meta name="description" content="{MetaDescription}" />
    \{/block:Description}

    %meta{:name => 'apple-mobile-web-app-capable', :content => 'yes'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1.0'}

    %meta{:name => 'text:Disqus Shortname', :content => 'uxtronaut'}


    %link{:rel => 'stylesheet', :href => 'https://s3-us-west-2.amazonaws.com/uxtronaut/css/uxtronaut.css'}
    %script{:type => 'text/javascript', :src => 'https://s3-us-west-2.amazonaws.com/uxtronaut/js/custom.modernizr.min.js'}

  %body
    %header
      .row
        .small-12.column
          %img#uxtronaut.floating{:src => 'https://s3-us-west-2.amazonaws.com/uxtronaut/images/uxtronaut.png'}

        .small-12.large-5.column
          %h1
            %a{:href => '/'}
              %span.ux ux
              %span tronaut

        .small-12.large-7.column
          %ul#contact
            %li
              %a{:href => 'http://twitter.com/uxtronaut'}
                %i.icon-twitter.icon-1

            %li
              %a{:href => 'http://github.com/uxtronaut'}
                %i.icon-github.icon-2

            %li
              %a{:href => 'mailto:uxtronaut@gmail.com'}
                %i.icon-mail.icon-3

            %li
              %a{:href => '{RSS}'}
                %i.icon-feed.icon-4

    %section
      .row
        .small-12.column
          %ol#posts
            {block:Posts}
            %article.post{:class => '{TagsAsClasses}'}
              {block:Text}
              .text
                {block:Title}
                %h1 {Title}
                {/block:Title}
                {Body}
              {/block:Text}

              {block:Quote}
              .quote
                %blockquote.words{class: "{Length}"} “{Quote}”
                {block:Source}
                %p.source {Source}
                {/block:Source}
              {/block:Quote}

              {block:Link}
              .link
                %h2
                  %a{:href => '{URL}'}
                    {Target}{Name}
              {block:Description}
              .caption {Description}
              {/block:Description}
              {/block:Link}

              {block:Video}
              .video
                .flex-video
                  {Video-500}
                {block:Caption}
                .caption {Caption}
                {/block:Caption}
              {/block:Video}

              {block:Audio}
              .audio
                {block:AlbumArt}
                %img{:alt => '{Caption}', :src => '{AlbumArtURL}'}
                {/block:AlbumArt}
                {AudioPlayerBlack}
                {block:Caption}
                .caption {Caption}
                {/block:Caption}
              {/block:Audio}

              {block:Photo}
              .photo
                {LinkOpenTag}
                %img{:alt => '{PhotoAlt}', :src => '{PhotoURL-HighRes}'}/
                {LinkCloseTag}
                {block:Caption}
                .caption {Caption}
                {/block:Caption}
              {/block:Photo}

              {block:Photoset}
              .photoset
                {block:Photos}
                %img{alt: "{PhotoAlt}", src: "{PhotoURL-HighRes}"}/
                {block:Caption}
                .caption {Caption}
                {/block:Caption}
                {/block:Photos}
                {block:Caption}
                .caption {Caption}
                {/block:Caption}
              {/block:Photoset}

              {block:Panorama}
              .panorama
                {LinkOpenTag}
                %img{alt: "{PhotoAlt}", src: "{PhotoURL-Panorama}"}/
                {LinkCloseTag}
                {block:Caption}
                .caption {Caption}
                {/block:Caption}
              {/block:Panorama}

              {block:Chat}
              .chat
                {block:Title}
                %h1 {Title}
                {/block:Title}
                %ul.conversation
                  {block:Lines}
                  %li.line{class: "{Alt}"}
                    {block:Label}
                    %span.person {Label}
                    {/block:Label}
                    %span.person-said {Line}
                  {/block:Lines}
              {/block:Chat}

              {block:Answer}
              .answer
                %img{src: "{AskerPortraitURL-40}"}
                {Asker}
                {Question}
                {Answer}
              {/block:Answer}

              {block:IndexPage}
              %p.info
                %a.permalink{href: "{Permalink}"} {lang:Permalink}
              {/block:IndexPage}

              {block:Date}
              {block:NewDayDate}
              %p.date {DayOfWeek}, {Month} {DayOfMonth}, {Year}
              {/block:NewDayDate}
              {block:SameDayDate}
              %p.date {DayOfWeek}, {Month} {DayOfMonth}, {Year}
              {/block:SameDayDate}
              {/block:Date}

              {block:IndexPage}
              %p.info
                %a.dsq-comment-count{href: "{Permalink}#disqus_thread"} Comments
              :javascript
                var disqus_shortname = '{text:Disqus Shortname}';
                (function () {
                    var s = document.createElement('script'); s.async = true;
                    s.type = 'text/javascript';
                    s.src = '//' + disqus_shortname + '.disqus.com/count.js';
                    (document.getElementsByTagName('HEAD')[0] || document.getElementsByTagName('BODY')[0]).appendChild(s);
                }());
              {/block:IndexPage}
            {/block:Posts}
            {block:IfDisqusShortname}
            {block:PermalinkPagination}
            #disqus_thread
            :javascript
              var disqus_shortname = 'uxtronaut';
              (function() {
                  var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                  dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                  (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
              })();
            %noscript
              Please enable JavaScript to view the
              %a{href: "http://disqus.com/?ref_noscript"} comments powered by Disqus.
            %a.dsq-brlink{href: "http://disqus.com"}
              blog comments powered by
              %span.logo-disqus Disqus
            {/block:PermalinkPagination}
            {/block:IfDisqusShortname}
